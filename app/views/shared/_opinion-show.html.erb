<% opinions.each do |opinion|%>
  <div class="mb-3 ml-2 py-2 px-2 white-backg opinion-box">
    <div class="row mx-0">
      <div class="col-lg-2 px-0">
      <%= image_tag 'prof-pic.jpg', class: 'd-block w-100 h-100' %>
      </div>
      <div class="col-lg-10 opinion-container">
        <p class="font-weight-bold author-name mb-0"><%= link_to(opinion.author.name, user_path(opinion.author))%></p>
        <p class="text-muted pt-2 opinion-content"><%= opinion.content %></p>
      <div class="d-flex justify-content-between mt-auto">
      <span>
      <%= edit_destroy(opinion.author, opinion) %>
      </span>
      <%= fav_btn(opinion)%>
      </div>
      </div>
    </div>
  </div>
<%end%>